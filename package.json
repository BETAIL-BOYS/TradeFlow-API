    "@nestjs/typeorm": "^10.0.2",
    "@nestjs/swagger": "^7.1.1",
    "swagger-ui-express": "^5.0.0",
    "@stellar/stellar-sdk": "^11.0.0",
    "pg": "^8.11.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.16",
    "@nestjs/testing": "^10.4.22",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.2.3",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
